[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    venv,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    # Allow long lines in reports/scripts if needed
    src/scripts/summarize_improvements.py:E501,
    src/scripts/summarize_gender_reports.py:E501



