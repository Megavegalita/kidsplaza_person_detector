[flake8]
# Flake8 configuration

# Maximum line length
max-line-length = 100

# Maximum complexity
max-complexity = 15

# Exclude patterns
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache

# Ignore specific errors
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused
    F841,  # local variable assigned but never used

# Maximum line length
line-length = 100

# Count violations
count = True

# Show source
show-source = True

# Statistics
statistics = True

# Per-file-ignores
per-file-ignores =
    __init__.py:F401,F403

# Inline configuration
inline-noqa =
    noqa
    NOQA

